{
  "schemaVersion": 1,
  "id": "promptcraft",
  "version": "${version}",
  "name": "PromptCraft",
  "description": "AI-powered command generation mod using AI API | 通过调用AI API实现自动编写命令的模组",
  "authors": [
    "Shy_Creeper",
    "Ultimate_Kevin"
  ],
  "contact": {
    "homepage": "https://space.bilibili.com/3493127828540221"
  },
  "license": "GPL-3.0",
  "icon": "assets/promptcraft/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.promptcraft.PromptCraft"
    ],
    "client": [
      "com.promptcraft.client.PromptCraftClient"
    ],
    "modmenu": [
      "com.promptcraft.client.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "promptcraft.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "~${minecraft_version}",
    "java": ">=21",
    "fabric-api": "*"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "badges": ["client"],
      "links": {
        "modmenu.homepage": "https://space.bilibili.com/3493127828540221"
      }
    }
  }
}
